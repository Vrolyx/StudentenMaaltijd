@model StudentenMaaltijd.Entity.Entity.Meal

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Meal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MealName" class="control-label">Naam</label>
                <input asp-for="MealName" class="form-control" />
                <span asp-validation-for="MealName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PreperationTime" class="control-label">Datum</label>
                <input asp-for="PreperationTime" class="form-control" TextMode="Date" />
                <span asp-validation-for="PreperationTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Beschrijving</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxAllowedGuests" class="control-label">Aantal gasten</label>
                <input asp-for="MaxAllowedGuests" class="form-control" />
                <span asp-validation-for="MaxAllowedGuests" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Prijs</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

