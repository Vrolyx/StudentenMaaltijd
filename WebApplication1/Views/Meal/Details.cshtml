@model MealDetailView

<div>
    <h4>Meal</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.MealId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MealId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MealName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MealName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PreperationTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PreperationTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MaxAllowedGuests)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MaxAllowedGuests)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>

    <h3>Ingeschreven studenten</h3>
    @if (Model.Students.Count().Equals(0))
    {
        <h5>Er zijn geen studenten ingeschreven voor deze maaltijd.</h5>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        naam
                    </th>
                    <th>
                        email
                    </th>
                    <th>
                        telefoonnummer
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Students)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                    </tr>
                }
            </table>
    }

    </div>


<div>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.MealId  }) |
    <a asp-action="Index">Back to List</a>
</div>
